<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="publicscreeningnavigation.app.MainActivity"
    android:background="@drawable/background"
    android:textColor="#ffffff">

    <Button
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:text="Map"
        android:id="@+id/map_button"
        android:layout_above="@+id/find_button"
        android:layout_centerHorizontal="true"
        android:onClick="openMapView"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:text="Find Location"
        android:id="@+id/find_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="openSearchView"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:text="Create Location"
        android:id="@+id/create_button"
        android:layout_below="@+id/find_button"
        android:layout_centerHorizontal="true"
        android:onClick="openUploadView"
        android:textColor="#ffffff"/>

</RelativeLayout>
