<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="publicscreeningnavigation.app" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="publicscreeningnavigation.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="publicscreeningnavigation.app.MapActivity"
            android:label="@string/title_activity_map" >
        </activity>
        <activity
            android:name="publicscreeningnavigation.app.SearchActivity"
            android:label="@string/title_activity_seach" >
        </activity>
        <activity
            android:name="publicscreeningnavigation.app.resultActivity"
            android:label="@string/title_activity_result" >
        </activity>
        <activity
            android:name="publicscreeningnavigation.app.PhotoActivity"
            android:label="Take a photo!" >
        </activity>
        <activity
            android:name="publicscreeningnavigation.app.uploadActivity"
            android:label="Upload">
        </activity>
        <activity
            android:name="publicscreeningnavigation.app.locationActivity"
            android:label="Loaction Activity">
        </activity>
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCRHaAkLzBpyI3A9_OtLqq3-QB_0C3txXM" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />



    </application>

</manifest>
